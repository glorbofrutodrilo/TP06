@{
    ViewData["Title"] = "Mis Tareas";
}

<div class="container">
    <div class="header">
        <h1>Mis Tareas</h1>
        <div class="user-info">
            <span>Bienvenido, @ViewBag.Usuario.Username</span>
            <a href="@Url.Action("Logout", "Home")" class="btn btn-logout">Cerrar Sesión</a>
        </div>
    </div>

    <div class="actions">
        <a href="@Url.Action("Agregar", "Tareas")" class="btn btn-primary">Agregar Nueva Tarea</a>
    </div>

    <div class="tareas-container">
        @if (ViewBag.Tareas != null && ViewBag.Tareas.Count > 0)
        {
            foreach (var tarea in ViewBag.Tareas)
            {
                <div class="tarea-card">
                    <div class="tarea-header">
                        <h3>@tarea.Titulo</h3>
                        <span class="prioridad @tarea.Prioridad.ToLower()">@tarea.Prioridad</span>
                    </div>
                    <div class="tarea-content">
                        <p>@tarea.Descripcion</p>
                        <div class="tarea-meta">
                            <span class="fecha">Fecha de entrega: @tarea.FechaDeEntrega.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                    <div class="tarea-actions">
                        <a href="@Url.Action("Editar", "Tareas", new { id = tarea.ID })" class="btn btn-edit">Editar</a>
                        <a href="@Url.Action("Compartir", "Tareas", new { id = tarea.ID })" class="btn btn-share">Compartir</a>
                        <a href="@Url.Action("Eliminar", "Tareas", new { id = tarea.ID })" class="btn btn-delete" onclick="return confirm('¿Estás seguro de que quieres eliminar esta tarea?')">Eliminar</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-tareas">
                <p>No tienes tareas registradas. ¡Crea tu primera tarea!</p>
            </div>
        }
    </div>
</div> 